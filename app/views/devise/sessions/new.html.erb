<div class="box-center">
  <div class="signin-wrapper">
    <h2>Sign in using</h2>

    <ul id="social-login" class="signup">
      <li class="facebook btn">
      <%= link_to "Sign up with your Facebook account",
          user_omniauth_authorize_path(:facebook) %>
      </li>
    </ul>

    <h3> or your account </h3>

    <%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
      <%= devise_error_messages! %>

      <%= f.text_field :login, :placeholder => "Your email address or your username" %>
      <%= f.password_field :password, :placeholder => "Password" %>

      <% if devise_mapping.rememberable? -%>
        <%= f.hidden_field :remember_me, :value => 1 %>
      <% end -%>

      <%= f.submit "Sign in", :class => "btn primary submit" %>
      <%- if devise_mapping.recoverable? && controller_name != 'passwords' %>
        <%= link_to "Forgot your password?", new_password_path(resource_name),
            :class => "btn btn-warning submit"  %>
      <% end -%>
    <% end %>
  </div>
</div>
