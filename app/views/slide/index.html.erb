<div class="slide">
  <div style="display:none;" id='event-server'><%= Settings.defaults[:event_server] %></div>
  <div style="display:none;" id='slug-name'><%= @slide.slug %></div>
  <div class="main-player">
    <div class="header primary-color">
      <div id="fullscreen-btn"></div>
    </div>
    <div class="player">
      <img id="current-slide" src="<%= @slide.page_url 1 %>" />
    </div>
    <div class="footer primary-color">
      <div class="controls">
        <div class="prev control-btn"></div>
        <div class="next control-btn"></div>
      </div>
      <div class="player-progress-container">
        <div class="player-progress" style="width: <%= 100 / @slide.pages %>%;"></div>
      </div>
  </div>
  </div>
  <div class="extra">
    <div class="author">
      <%= image_tag @slide.author.avatar_url, :class => :author_avatar %>
      <div class="author_name"><%= @slide.author.name %></div>
      <div><%= @slide.author.slides.count %> slides</div>
    </div>

    <div class="stats">
      <div class="view_count"><%= @slide.view_count %></div>
    </div>

    <div class="share">Share
      <div class="download">
        <%= link_to "Download PDF", @slide.pdf_url %>
      </div>
      <div class='btn primary btn-success' id="start-session">Start session</div>
      <div id="stream-url-name"class="input-append" style="display:none;"> 
        <input type="text" placeholder="Type somethingâ€¦">
        <div class='btn' id="yank">copy to clipboard</div> <!--[TODO]-->
      </div>
    </div>
    
  </div>

</div>

<script type="text/javascript">
  var slidePrefixUrl = "<%= @slide.slide_url_prefix %>";
  var totalPage = "<%= @slide.pages %>";
</script>
<% content_for :javascript do %>
  <%= javascript_include_tag 'slideplayer','streamingfw/publisher','slide' %>
<% end %>
